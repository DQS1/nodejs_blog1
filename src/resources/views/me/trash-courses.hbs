<form name="delete-course-form" method="POST"></form>
<form name="restore-course-form" method="POST"></form>


<script>
    document.addEventListener('DOMContentLoaded', function() {
        var courseId;
        var deleteForm = document.forms['delete-course-form'];
        var restoreForm = document.forms['restore-course-form'];
        var btnDeleteCourse = document.getElementById('btn-delete-course');
        var restoreBtns = document.getElementsByClassName('btn-restore');

        // When dialog confirm clicked
        var deleteModal = document.getElementById('delete-course-modal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            var button = (event.relatedTarget);
            courseId = button.getAttribute('data-bs-id');
        });
        
        // When delete course btn clicked
        btnDeleteCourse.onclick = function () {
            deleteForm.action = '/courses/' + courseId + '/force?_method=DELETE';
            deleteForm.submit();
        }

        // Restore btn clicked
        Array.from(restoreBtns).forEach(function(restoreBtn) {
        restoreBtn.addEventListener("click", function (e) {
            e.preventDefault();
            var courseId = this.dataset.id;
            console.log("üöÄ Course ID:", courseId);
            restoreForm.action = '/courses/' + courseId + '/restore?_method=PATCH';
            restoreForm.submit();
        });
    });
    });
</script>